<!DOCTYPE html>
<html lang="en">
 
    <%- include("./partials/head") %> 
  <body>

    <%- include("./partials/nav") %> 

    <div class="blogs content">
      <h2>All Blogs</h2>
      <% if(blogs.length > 0) { %>
        <% blogs.forEach((blog) => { %> 
          
  <a href="/blogs/<%= blog._id  %>">
      <h3 class="title"><%= blog.title %></h3>
      <p class="snippet"><%= blog.snippet %></p>
        </a>
      <% })  %> 
      <% } else { %>
        <h4>No Blogs To Display</h4>
        <% } %> 
    </div>
    
    <%- include("./partials/footer") %> 
  </body>
</html>
